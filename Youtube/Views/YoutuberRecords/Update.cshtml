@model youtuberRecordsVM

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Youtuber</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="YoutuberRecords.Votos" hidden />

            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <select asp-for="@Model.YoutuberRecords.YoutuberId" asp-items="@Model.YoutuberList" class="form-select border shadow">
                        <option disabled selected>-- Select Youtuber --</option>
                    </select>
                    <label asp-for="YoutuberRecords.YoutuberId" class="ms-2"></label>
                    <span asp-validation-for="YoutuberRecords!.YoutuberId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="YoutuberRecords.Votos" disabled class="form-control border shadow" />
                    <label asp-for="YoutuberRecords.Votos" class="ms-2"></label>
                    <span asp-validation-for="YoutuberRecords.Votos" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="YoutuberRecords.Youtuber_Trophy" class="form-control border shadow" />
                    <label asp-for="YoutuberRecords.Youtuber_Trophy" class="ms-2"></label>
                    <span asp-validation-for="YoutuberRecords.Youtuber_Trophy" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Update
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}